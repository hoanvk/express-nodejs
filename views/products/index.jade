extends ../layout

block content
  a(href="/products/create", class="btn btn-primary mb-2") Create new
  table.table
    thead
      tr
        th(scope='col') #
        th(scope='col') Name
        th(scope='col') Title
        
    tbody
      each product in products
        tr
          th(scope='row') 
            a(href='/products/edit/#{product.id}') Edit
          td #{product.name}
          td #{product.title}
          
      
